#!/usr/bin/env python3

import os
import sys
import time
import signal
from socketserver import ThreadingTCPServer
from threading import Thread

# add src load packages
sys.path.insert(0, os.path.dirname(os.path.dirname(__file__)))

from src.lib.server import AuthServer
from src.lib.server import kill_server
from src.lib.server import Users
from src.lib import Log
from src import APP_HOST, APP_PORT, APP_AUTH_DB, APP_START

try:
    # set authentification db
    Users.load(APP_AUTH_DB)
except Exception as e:
    Log.err("Unable to load users: %s" % str(e))
    sys.exit(1)

# setup threading src
server = ThreadingTCPServer((APP_HOST, APP_PORT), AuthServer)

# get src information
ip, port = server.server_address

# start threading
_server = Thread(target=server.serve_forever)
_server.daemon = True


def server_stop(_, __):
    global server
    Log.log("Stopping src...")
    kill_server()
    time.sleep(2)
    sys.exit(0)


signal.signal(signal.SIGINT, server_stop)
signal.signal(signal.SIGTERM, server_stop)

Log.log("Starting...")
Log.log("IP    : %s" % ip)
Log.log("Port  : %s" % port)

_server.run()
